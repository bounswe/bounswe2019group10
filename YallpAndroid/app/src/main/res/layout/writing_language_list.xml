<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/listItemBox">

    <LinearLayout
        android:id="@+id/listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topicBox"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameSurnameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Name:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#40403d" />

            <TextView
                android:id="@+id/topicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@id/isSolvedText"
                android:layout_toEndOf="@+id/nameSurnameTitle"
                android:text="Phrasal"
                android:textColor="#969693"
                android:textSize="18dp"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/isSolvedText"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solved"
                android:textSize="18dp"
                android:layout_marginEnd="3dp"
                android:drawablePadding="5dp"
                android:textStyle="italic"
                android:textColor="#969693"
                android:drawableEnd="@drawable/ic_check"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quizIdBox"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreWriting"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="8/10"
                android:textSize="18dp"
                android:textStyle="italic"
                android:textColor="#969693" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
