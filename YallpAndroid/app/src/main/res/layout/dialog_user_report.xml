<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/chooseCause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_cause"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinnerForReport"
        android:layout_below="@id/chooseCause"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/optionalExplanation"
        android:layout_below="@+id/spinnerForReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/optional_explanatipon"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/optionalExplanationText"
        android:layout_below="@+id/optionalExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>